  apiVersion: templates.gatekeeper.sh/v1beta1
kind: ConstraintTemplate
metadata:
  name: k8srequireddeploymentlabels
spec:
  crd:
    spec:
      names:
        kind: k8srequireddeploymentlabels
      validation:
        # Schema for the `parameters` field
        openAPIV3Schema:
          properties:
            labels:
              type: array
              items:
                type: string
  targets:
    - target: admission.k8s.gatekeeper.sh
      rego: |
        package k8srequireddeploymentlabels

        violation[{"msg": msg, "details": {"missing_labels": missing}}] {
          required := {label | label := input.parameters.labels[_]; not contains(label, "=")}
          provided := {label | input.review.object.metadata.labels[label]}
          missing := required - provided
          count(missing) > 0
          msg := sprintf("you must provide labels: %v", [missing])
        }

        violation[{"msg": msg, "details": {"missing_labels": missing}}] {
          required_kvs := {label | label := input.parameters.labels[_]; contains(label, "=")}
          some k
          provided_kvs := {sprintf("%v=%v", [k, v]) | v := input.review.object.metadata.labels[k]}
          missing := required_kvs - provided_kvs
          count(missing) > 0
          msg := sprintf("you must provide labels: %v", [missing])
        }
